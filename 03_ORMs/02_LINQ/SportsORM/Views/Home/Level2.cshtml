        @{
            foreach (var league in @ViewBag.AllNonFootballLeagues)
            {
                <tr>
                    <td>@league.LeagueId</td>
                    <td>@league.Name</td>
                    <td>@league.Sport</td>
                </tr>
            }
        }
    </table>
