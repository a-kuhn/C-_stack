@model Dish

<a href="/">back to chefs</a>
<a href="/dishes" class="px-4">back to dishes</a>

<form asp-action="CreateDish" asp-controller="Dishes" asp-route-create="/dishes/create" asp-action="post" class="black-border form container d-flex flex-column align-items-center py-2">

    <div class="form-group row">
        <span class="red-font" asp-validation-for="Name"></span>
        <div class="col">
            <label asp-for="Name" class="col">Name of Dish</label>
        </div>            
        <div class="col">
            <input type="text" class="form-control" asp-for="Name">
        </div>
    </div>

    <div class="form-group row">
        <span class="red-font" asp-validation-for="Calories"></span>
        <div class="col">
            <label asp-for="Calories" class="col"># of Calories</label>
        </div>            
        <div class="col">
            <input type="number" min="0" class="form-control" asp-for="Calories">
        </div>
    </div>

    <div class="form-group row">
        <span class="red-font" asp-validation-for="Tastiness"></span>
        <div class="col">
            <label asp-for="Tastiness" class="col">Tastiness</label>
        </div>            
        <div class="col">
            <select type="number" class="form-control" asp-for="Tastiness">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <span class="red-font" asp-validation-for="DishCreator"></span>
        <div class="col">
            <label asp-for="DishCreator" class="col">Chef</label>
        </div>            
        <div class="col">
            <select type="number" class="form-control" asp-for="ChefId">
                @{foreach(Chef chef in @ViewBag.allChefs)
                {
                    <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                }}
            </select>
        </div>
    </div>

    <div class="form-group row">
        <span class="red-font" asp-validation-for="Description"></span>
        <div class="col">
            <label asp-for="Description" class="col">Description</label>
        </div>            
        <div class="col">
            <input type="text" class="form-control" asp-for="Description">
        </div>
    </div>

    <button type="submit">Add Dish</button>
</form>