@model Dish
<a href="/">Home</a>
<div class="container justify-content-center">
    <h1>Edit @Model.Name</h1>
    <form asp-action="Update" asp-controller="Home" asp-route-dishID="@Model.DishId" method="post" class="black-border form container d-flex flex-column align-items-center py-2">

        <div class="form-group row">
            <span class="red-font" asp-validation-for="Chef"></span>
            <div class="col">
                <label asp-for="Chef" class="col">Chef's Name</label>
            </div>            
            <div class="col">
                <input type="text" class="form-control" asp-for="Chef">
            </div>
        </div>

        <div class="form-group row">
            <span class="red-font" asp-validation-for="Name"></span>
            <div class="col">
                <label asp-for="Name" class="col">Name of Dish</label>
            </div>            
            <div class="col">
                <input type="text" class="form-control" asp-for="Name">
            </div>
        </div>

        <div class="form-group row">
            <span class="red-font" asp-validation-for="Calories"></span>
            <div class="col">
                <label asp-for="Calories" class="col"># of Calories</label>
            </div>            
            <div class="col">
                <input type="number" class="form-control" asp-for="Calories">
            </div>
        </div>

        <div class="form-group row">
            <span class="red-font" asp-validation-for="Tastiness"></span>
            <div class="col">
                <label asp-for="Tastiness" class="col">Tastiness</label>
            </div>            
            <div class="col">
                <input type="number" class="form-control" asp-for="Tastiness">
            </div>
        </div>

        <div class="form-group row">
            <span class="red-font" asp-validation-for="Description"></span>
            <div class="col">
                <label asp-for="Description" class="col">Description</label>
            </div>            
            <div class="col">
                <input type="text" class="form-control" asp-for="Description">
            </div>
        </div>

        <button type="submit">Edit Dish</button>
    </form>
</div>