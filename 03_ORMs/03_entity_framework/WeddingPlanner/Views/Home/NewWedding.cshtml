@model Wedding

<h1>Plan Your Wedding <a href="/dashboard" class="mx-3">Dashboard</a> <a href="/logout" class="mx-3">Log Out</a></h1>

<form asp-controller="Home" asp-action="Create" method="post" class="outline form d-inline-flex">
        <div class="col outline">
            <div class="row outline">
                <div class="form-group">
                    <span class="red-font" asp-validation-for="Wedder1"></span>
                    <label asp-for="Wedder1">Wedder One</label>
                    <input type="text" asp-for="Wedder1">
                </div>
            </div>
            <div class="row outline">
                <div class="form-group">
                    <span class="red-font" asp-validation-for="Wedder2"></span>
                    <label asp-for="Wedder2">Wedder2</label>
                    <input type="text" asp-for="Wedder2">
                </div>
            </div>
            <div class="row outline">
                <div class="form-group">
                    <span class="red-font" asp-validation-for="Date"></span>
                    <label asp-for="Date">Date</label>
                    <input asp-for="Date">
                </div>
            </div>
            
        </div>
        <div class="col outline">
            <div class="row outline">
                <div class="form-group">
                    <span class="red-font" asp-validation-for="Address"></span>
                    <label asp-for="Address">Wedding Address</label>
                    <input type="text" asp-for="Address">
                </div>
            </div>
        </div>
        <div class="row outline">
            <button type="submit">Create</button>
        </div>
    </form>