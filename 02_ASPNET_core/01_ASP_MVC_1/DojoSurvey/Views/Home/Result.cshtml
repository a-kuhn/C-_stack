<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Input Display</title>
</head>
<body class="main-container">

    <div class="container black-border my-5">
            @* 
            ViewBag.Name = Name;
            ViewBag.DojoLocation = DojoLocation;
            ViewBag.FavLang = FavLang;
            ViewBag.Comment = Comment; 
            *@
        <h5 class="underline">Submitted Info:</h5>
        <div class="row">
            <p class="col">Name:</p>
            <p class="col">@ViewBag.Name</p>
        </div>

        <div class="row">
            <p class="col">Dojo Location:</p>
            <p class="col">@ViewBag.DojoLocation</p>
        </div>

        <div class="row">
            <p class="col">Favorite Language:</p>
            <p class="col">@ViewBag.FavLang</p>
        </div>

        <div class="row">
            <p class="col">Comment:</p>
            <p class="col">@ViewBag.Comment</p>
        </div>

    <div class="d-flex justify-content-end">
        <a class="m-5 p-2 h4 black-border" href="/">Go Back</a>
    </div>

    </div>
</body>
</html>