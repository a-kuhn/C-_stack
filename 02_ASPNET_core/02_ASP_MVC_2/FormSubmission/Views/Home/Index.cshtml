@model User

<div class="text-left">
    <h1 class="display-4 p-3">Enter your information</h1>
    
    <form asp-action="Result" asp-controller="Home" method="post" class="black-border form container d-flex flex-column align-items-center py-2">

        <div class="form-group row">
            <span class="red-font" asp-validation-for="FirstName"></span>
            <div class="col">
                <label asp-for="FirstName" class="col">First Name</label>
            </div>            
            <div class="col">
                <input type="text" class="form-control" asp-for="FirstName">
            </div>
        </div>

        <div class="form-group row">
            <span class="red-font" asp-validation-for="LastName"></span>
            <div class="col">
                <label asp-for="LastName" class="col">Last Name</label>
            </div>            
            <div class="col">
                <input type="text" class="form-control" asp-for="LastName">
            </div>
        </div>

        <div class="form-group row">
            <span class="red-font" asp-validation-for="Age"></span>
            <div class="col">
                <label asp-for="Age" class="col">Age</label>
            </div>            
            <div class="col">
                <input type="text" class="form-control" asp-for="Age">
            </div>
        </div>

        <div class="form-group row">
            <span class="red-font" asp-validation-for="Email"></span>
            <div class="col">
                <label asp-for="Email" class="col">Email Address</label>
            </div>            
            <div class="col">
                <input type="text" class="form-control" asp-for="Email">
            </div>
        </div>

        <div class="form-group row">
            <span class="red-font" asp-validation-for="Password"></span>
            <div class="col">
                <label asp-for="Password" class="col text-left">Password</label>
            </div>            
            <div class="col">
                <input type="text" class="form-control" asp-for="Password">
            </div>
        </div>

        <button type="submit">Submit</button>
    </form>

</div>
